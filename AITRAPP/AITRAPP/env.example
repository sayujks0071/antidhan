# Kite Connect API Credentials
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=your_access_token_here
KITE_USER_ID=your_user_id_here

# Application Configuration
APP_MODE=PAPER
APP_TIMEZONE=Asia/Kolkata
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://aitrapp:aitrapp@localhost:5432/aitrapp
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-secret-key-min-32-chars-change-in-production

# WebSocket
WS_PING_INTERVAL=30
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10

# Risk Management (defaults can be overridden in app.yaml)
RISK_PER_TRADE_PCT=0.5
RISK_MAX_PORTFOLIO_HEAT_PCT=2.0
RISK_DAILY_LOSS_STOP_PCT=2.5

# Market Hours (IST)
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30
EOD_SQUAREOFF_TIME=15:25

# Alerts (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SLACK_WEBHOOK_URL=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
DEBUG=false
RELOAD=false

